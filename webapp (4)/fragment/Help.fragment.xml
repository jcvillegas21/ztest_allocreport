<core:FragmentDefinition 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" 
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core" >
    <Dialog id="z_pal_allocRpt_IDGenDialog1" title="{i18n>helpTitle}">
        <content>
            <Panel id="z_pal_allocRpt_IDGenPanel">
                <content>
                    <FormattedText id="z_pal_allocRpt_FormattedText" htmlText="{helpModel>/html/htmlIntro}" />
                </content>
            </Panel>
            <Panel id="z_pal_allocRpt_IDGenPanel10" headerText="View/Variant Management:"  class="allocRptHelpHeaders">
                <content>
                    <VBox id="z_pal_allocRpt_IDGenVBox">
                        <Text id="z_pal_allocRpt_IDGenText60" text="{i18n>viewVariantMgmtTxt}"/>
                    </VBox>
                </content>
            </Panel>
            <Panel id="z_pal_allocRpt_IDGenPanel02" headerText="Filter/Search Bar :" class="allocRptHelpHeaders">
                <content>
                    <Text id="z_pal_allocRpt_IDGenText90" text="{i18n>filterBarTxt}"/>
                </content>
            </Panel>
            <Panel id="z_pal_allocRpt_IDGenPanel30" headerText="Event based and Order based table :" class="allocRptHelpHeaders">
                <content>
                    <VBox id="z_pal_allocRpt_IDGenVBox1" >
                        <Text id="z_pal_allocRpt_IDGenText100" text="{i18n>evtBaseOrderBaseTxt}"/>
                      
                    </VBox>
                </content>
            </Panel>
            
        </content>
        <endButton>
            <Button id="z_pal_allocRpt_IDGenButton" text="Close" press="onHelpDialogClose"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>